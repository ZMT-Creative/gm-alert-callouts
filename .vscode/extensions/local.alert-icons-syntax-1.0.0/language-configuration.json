{
    "comments": {
        "lineComment": "#"
    },
    "brackets": [
        ["<", ">"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "autoClosingPairs": [
        {
            "open": "<",
            "close": ">"
        },
        {
            "open": "\"",
            "close": "\""
        },
        {
            "open": "'",
            "close": "'"
        }
    ],
    "surroundingPairs": [
        ["<", ">"],
        ["\"", "\""],
        ["'", "'"]
    ],
    "wordPattern": "[a-zA-Z0-9_-]+"
}